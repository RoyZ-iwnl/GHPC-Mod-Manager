<UserControl x:Class="GHPC_Mod_Manager.Views.TranslationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:GHPC_Mod_Manager.Converters"
             xmlns:resources="clr-namespace:GHPC_Mod_Manager.Resources"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InvBoolToVis"/>
        <converters:BooleanAndToVisibilityConverter x:Key="BoolAndToVis"/>
        <converters:TranslationLanguageDisplayConverter x:Key="TransLangDisplay"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Top">
            <GroupBox Header="{x:Static resources:Strings.TranslationSystem}" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="{x:Static resources:Strings.InstallationStatus}"
                                   VerticalAlignment="Center" MinWidth="100" Margin="0,0,10,0"/>
                        <TextBlock Text="{x:Static resources:Strings.Installed}" Foreground="Green"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding IsTranslationInstalled, Converter={StaticResource BoolToVis}}"/>
                        <TextBlock Text="{x:Static resources:Strings.NotInstalled}" Foreground="Red"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding IsTranslationInstalled, Converter={StaticResource InvBoolToVis}}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="{x:Static resources:Strings.InstallTranslationSystem}"
                                Command="{Binding InstallTranslationCommand}"
                                MinWidth="140" Margin="0,0,10,0"
                                Style="{DynamicResource FilledButtonStyle}"
                                Visibility="{Binding IsTranslationInstalled, Converter={StaticResource InvBoolToVis}}"/>

                        <Button Content="{x:Static resources:Strings.UpdateTranslationPlugin}"
                                Command="{Binding UpdateTranslationPluginCommand}"
                                MinWidth="140" Margin="0,0,10,0"
                                Style="{DynamicResource FilledButtonStyle}">
                            <Button.Visibility>
                                <MultiBinding Converter="{StaticResource BoolAndToVis}">
                                    <Binding Path="IsTranslationInstalled"/>
                                    <Binding Path="IsTranslationPluginUpdateAvailable"/>
                                </MultiBinding>
                            </Button.Visibility>
                        </Button>

                        <Button Content="{x:Static resources:Strings.UpdateTranslationResources}"
                                Command="{Binding UpdateTranslationCommand}"
                                MinWidth="140" Margin="0,0,10,0"
                                Style="{DynamicResource FilledButtonStyle}">
                            <Button.Visibility>
                                <MultiBinding Converter="{StaticResource BoolAndToVis}">
                                    <Binding Path="IsTranslationInstalled"/>
                                    <Binding Path="IsTranslationResourceUpdateAvailable"/>
                                </MultiBinding>
                            </Button.Visibility>
                        </Button>

                        <Button Content="{x:Static resources:Strings.UninstallTranslationSystem}"
                                Command="{Binding UninstallTranslationCommand}"
                                MinWidth="140"
                                Style="{DynamicResource OutlinedButtonStyle}"
                                Visibility="{Binding IsTranslationInstalled, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="{x:Static resources:Strings.LanguageSelection}"
                      Visibility="{Binding IsTranslationInstalled, Converter={StaticResource BoolToVis}}">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="{x:Static resources:Strings.CurrentLanguage}"
                                   VerticalAlignment="Center" MinWidth="100" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding AvailableLanguages}"
                                  SelectedItem="{Binding CurrentTranslationLanguage}"
                                  MinWidth="120" MaxWidth="200" Margin="0,0,10,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource TransLangDisplay}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button Content="{x:Static resources:Strings.Apply}"
                                Command="{Binding SetTranslationLanguageCommand}"
                                CommandParameter="{Binding CurrentTranslationLanguage}"
                                MinWidth="80"
                                Style="{DynamicResource FilledButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="{x:Static resources:Strings.TranslationPluginControl}"
                      Visibility="{Binding IsTranslationInstalled, Converter={StaticResource BoolToVis}}"
                      Margin="0,20,0,0">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="{x:Static resources:Strings.PluginStatus}"
                                   VerticalAlignment="Center" MinWidth="100" Margin="0,0,10,0"/>
                        <TextBlock Text="{x:Static resources:Strings.Enabled}" Foreground="Green"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding IsTranslationPluginEnabled, Converter={StaticResource BoolToVis}}"/>
                        <TextBlock Text="{x:Static resources:Strings.Disabled}" Foreground="Red"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding IsTranslationPluginEnabled, Converter={StaticResource InvBoolToVis}}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="{x:Static resources:Strings.EnableTranslationPlugin}"
                                Command="{Binding ToggleTranslationPluginCommand}"
                                MinWidth="140" Margin="0,0,10,0"
                                Style="{DynamicResource FilledButtonStyle}"
                                Visibility="{Binding IsTranslationPluginEnabled, Converter={StaticResource InvBoolToVis}}"/>
                        <Button Content="{x:Static resources:Strings.DisableTranslationPlugin}"
                                Command="{Binding ToggleTranslationPluginCommand}"
                                MinWidth="140"
                                Style="{DynamicResource OutlinedButtonStyle}"
                                Visibility="{Binding IsTranslationPluginEnabled, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- 右侧提示区域 -->
        <Border Grid.Column="1" Margin="20,0,0,0" Padding="15"
                Background="{DynamicResource SurfaceVariantBrush}"
                CornerRadius="{DynamicResource RadiusMedium}"
                Visibility="{Binding IsTranslationInstalled, Converter={StaticResource BoolToVis}}">
            <StackPanel>
                <TextBlock Text="{x:Static resources:Strings.TranslationTipsTitle}"
                           FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock Text="{x:Static resources:Strings.TranslationTipsContent}"
                           TextWrapping="Wrap" LineHeight="20"
                           Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
