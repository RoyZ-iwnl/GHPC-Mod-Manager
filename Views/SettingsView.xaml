<UserControl x:Class="GHPC_Mod_Manager.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:GHPC_Mod_Manager.Converters"
             xmlns:resources="clr-namespace:GHPC_Mod_Manager.Resources"
             xmlns:models="clr-namespace:GHPC_Mod_Manager.Models"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:UpdateChannelDisplayConverter x:Key="UpdateChannelDisplayConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20" Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="{x:Static resources:Strings.ProgramSettings}" 
                      FontSize="{DynamicResource HeadlineSmall}" 
                      FontWeight="Medium" 
                      VerticalAlignment="Center"
                      Foreground="{DynamicResource OnBackgroundBrush}"/>
        </StackPanel>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Language Settings -->
                <GroupBox Header="{x:Static resources:Strings.LanguageSettings}" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{x:Static resources:Strings.ProgramLanguage}" VerticalAlignment="Center" MinWidth="120" Margin="0,0,10,0"/>
                            <ComboBox ItemsSource="{Binding AvailableLanguages}" 
                                      SelectedItem="{Binding SelectedLanguage}"
                                      MinWidth="120" MaxWidth="200">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={x:Static converters:LanguageDisplayConverter.Instance}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Theme Settings -->
                <GroupBox Header="{x:Static resources:Strings.ThemeSettings}" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{x:Static resources:Strings.AppTheme}" VerticalAlignment="Center" MinWidth="120" Margin="0,0,10,0"/>
                            <ComboBox ItemsSource="{Binding AvailableThemes}" 
                                      SelectedItem="{Binding SelectedTheme}"
                                      MinWidth="120" MaxWidth="200" Margin="0,0,10,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={x:Static converters:ThemeDisplayConverter.Instance}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Content="{x:Static resources:Strings.Apply}" Command="{Binding ChangeThemeCommand}" 
                                    MinWidth="60" Style="{DynamicResource FilledButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Game Path Settings -->
                <GroupBox Header="{x:Static resources:Strings.GamePath}" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{x:Static resources:Strings.GameRootDirectory}" VerticalAlignment="Center" MinWidth="120" Margin="0,0,10,0"/>
                            <TextBox Text="{Binding GameRootPath}" IsReadOnly="True" Margin="0,0,10,0" MinWidth="300" MaxWidth="400"/>
                            <Button Content="{x:Static resources:Strings.Browse}" Command="{Binding BrowseGameDirectoryCommand}" 
                                    MinWidth="80" Style="{DynamicResource OutlinedButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- 数据源配置（始终显示 Token + 代理；开发模式下额外显示 URL 字段） -->
                <GroupBox Header="{x:Static resources:Strings.DataSourceConfiguration}" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <!-- GitHub API Token -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="{x:Static resources:Strings.GitHubApiToken}" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding GitHubApiToken}" HorizontalAlignment="Stretch" MaxWidth="600"/>
                            <TextBlock Text="{x:Static resources:Strings.GitHubApiTokenDescription}"
                                       FontSize="{DynamicResource BodySmall}"
                                       Foreground="{DynamicResource OnSurfaceVariantBrush}"
                                       Margin="0,3,0,0"/>
                            <TextBlock Text="{x:Static resources:Strings.GitHubApiTokenHint}"
                                       FontSize="{DynamicResource BodySmall}"
                                       Foreground="{DynamicResource ErrorBrush}"
                                       Margin="0,3,0,0"/>
                            <TextBlock Margin="0,3,0,0" FontSize="{DynamicResource BodySmall}">
                                <Hyperlink NavigateUri="https://github.com/settings/tokens" RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="{x:Static resources:Strings.GitHubApiTokenGetUrl}"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>

                        <!-- GitHub 代理加速 -->
                        <StackPanel Margin="0,0,0,10" Visibility="{Binding IsGitHubProxyVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <CheckBox IsChecked="{Binding UseGitHubProxy}" IsEnabled="{Binding IsGitHubProxyEnabled}" Margin="0,0,0,5">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{x:Static resources:Strings.UseGitHubProxy}" FontWeight="Medium"/>
                                    <TextBlock Text="{x:Static resources:Strings.GitHubProxyDescription}"
                                               FontSize="{DynamicResource BodySmall}"
                                               Foreground="{DynamicResource OnSurfaceVariantBrush}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </CheckBox>
                        <StackPanel Margin="20,5,0,0" Visibility="{Binding UseGitHubProxy, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="{x:Static resources:Strings.GitHubProxyServer}" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding AvailableProxyServers}"
                                          SelectedValue="{Binding GitHubProxyServer}"
                                          SelectedValuePath="EnumValue"
                                          Width="310" HorizontalAlignment="Left">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DisplayName}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>

                        <!-- 开发模式下显示数据源 URL 字段 -->
                        <StackPanel Visibility="{Binding IsDevMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Separator Margin="0,5,0,10"/>
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="{x:Static resources:Strings.MainConfigURL}" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding MainConfigUrl}" HorizontalAlignment="Stretch" MaxWidth="600"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 强制刷新云端配置（始终显示） -->
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="{x:Static resources:Strings.ForceRefreshCloudConfigurations}"
                                    Command="{Binding ForceRefreshConfigurationsCommand}"
                                    MinWidth="200" MaxWidth="300"
                                    Style="{DynamicResource OutlinedButtonStyle}"
                                    Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding RefreshStatus}"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource SuccessBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- MelonLoader 管理 -->
                <GroupBox Header="{x:Static resources:Strings.MelonLoaderManagement}" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <!-- 当前版本与状态 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="{x:Static resources:Strings.MelonLoaderInstalledVersion}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding MelonLoaderInstalledVersion}" VerticalAlignment="Center" FontWeight="Medium" Margin="0,0,12,0"/>
                            <TextBlock VerticalAlignment="Center"
                                       Foreground="{DynamicResource ErrorBrush}"
                                       Visibility="{Binding IsMelonLoaderDisabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Run Text="("/>
                                <Run Text="{x:Static resources:Strings.MelonLoaderDisabled}"/>
                                <Run Text=")"/>
                            </TextBlock>
                        </StackPanel>
                        <!-- 禁用/启用按钮（仅已安装时显示） -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8"
                                    Visibility="{Binding IsMelonLoaderInstalled, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Button Command="{Binding ToggleMelonLoaderCommand}"
                                    IsEnabled="{Binding IsMelonLoaderOperating, Converter={StaticResource InverseBooleanConverter}}"
                                    MinWidth="120" Margin="0,0,10,0"
                                    Style="{DynamicResource OutlinedButtonStyle}">
                                <Button.Content>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{x:Static resources:Strings.DisableMelonLoader}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMelonLoaderDisabled}" Value="True">
                                                        <Setter Property="Text" Value="{x:Static resources:Strings.EnableMelonLoader}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                        <!-- 覆盖安装/更新版本 -->
                        <StackPanel Orientation="Horizontal">
                            <ComboBox ItemsSource="{Binding MelonLoaderReleases}"
                                      SelectedItem="{Binding SelectedMelonLoaderRelease}"
                                      DisplayMemberPath="TagName"
                                      MinWidth="160" Margin="0,0,10,0"/>
                            <Button Command="{Binding ReinstallMelonLoaderCommand}"
                                    IsEnabled="{Binding IsMelonLoaderOperating, Converter={StaticResource InverseBooleanConverter}}"
                                    MinWidth="160"
                                    Style="{DynamicResource FilledButtonStyle}">
                                <Button.Content>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{x:Static resources:Strings.ReinstallMelonLoader}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMelonLoaderInstalled}" Value="False">
                                                        <Setter Property="Text" Value="{x:Static resources:Strings.InstallMelonLoader}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Maintenance -->
                <GroupBox Header="{x:Static resources:Strings.MaintenanceTools}" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="{x:Static resources:Strings.CleanTempFiles}" Command="{Binding CleanTempFilesCommand}" 
                                    MinWidth="120" MaxWidth="150" Margin="0,0,10,0"
                                    Style="{DynamicResource OutlinedButtonStyle}"/>
                            <Button Content="{x:Static resources:Strings.CleanupDownloadedMods}" Command="{Binding CleanupModBackupsCommand}" 
                                    MinWidth="120" MaxWidth="180" Margin="0,0,10,0"
                                    Style="{DynamicResource OutlinedButtonStyle}"/>
                            <Button Content="{x:Static resources:Strings.ViewLogs}" Command="{Binding ShowLogWindowCommand}" 
                                    MinWidth="80" MaxWidth="120"
                                    Style="{DynamicResource TextButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- About -->
                <GroupBox Header="{x:Static resources:Strings.About}" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <!-- Update Channel -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{x:Static resources:Strings.UpdateChannel}" VerticalAlignment="Center" MinWidth="120" Margin="0,0,10,0"/>
                            <ComboBox ItemsSource="{Binding AvailableUpdateChannels}"
                                      SelectedItem="{Binding SelectedUpdateChannel, Mode=TwoWay}"
                                      MinWidth="250">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource UpdateChannelDisplayConverter}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!-- Application Version and Check for Updates -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{x:Static resources:Strings.ApplicationVersion}" VerticalAlignment="Center" MinWidth="120" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding ApplicationVersion}" VerticalAlignment="Center" FontWeight="Medium" MinWidth="100" Margin="0,0,10,0"/>
                            <Button Content="{x:Static resources:Strings.CheckForUpdates}"
                                    Command="{Binding CheckForAppUpdatesCommand}"
                                    Style="{DynamicResource OutlinedButtonStyle}"
                                    MinWidth="120"
                                    Margin="10,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{x:Static resources:Strings.ProjectUrl}" VerticalAlignment="Center" MinWidth="120" Margin="0,0,10,0"/>
                            <Button Style="{DynamicResource TextButtonStyle}"
                                    Command="{Binding OpenProjectUrlCommand}"
                                    Padding="0" MinWidth="0" BorderThickness="0" Background="Transparent">
                                <TextBlock Foreground="{DynamicResource PrimaryBrush}" TextDecorations="Underline">
                                    https://github.com/RoyZ-iwnl/GHPC-Mod-Manager/
                                </TextBlock>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0"
                                    Visibility="{Binding IsChineseLanguage, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Button Content="{x:Static resources:Strings.FollowBilibili}"
                                    Command="{Binding OpenFollowBilibiliCommand}"
                                    Style="{DynamicResource FilledButtonStyle}"
                                    MinWidth="120" Margin="0,0,10,0"/>
                            <Button Content="{x:Static resources:Strings.JoinGhpcCommunity}"
                                    Command="{Binding OpenGhpcCommunityCommand}"
                                    Style="{DynamicResource FilledButtonStyle}"
                                    MinWidth="140"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{x:Static resources:Strings.SaveSettings}" Command="{Binding SaveSettingsCommand}" 
                    MinWidth="100" Margin="0,0,10,0"
                    Style="{DynamicResource FilledButtonStyle}"/>
            <Button Content="{x:Static resources:Strings.BackToMain}" Command="{Binding BackToMainCommand}" 
                    MinWidth="120"
                    Style="{DynamicResource OutlinedButtonStyle}"/>
        </StackPanel>
        
    </Grid>
</UserControl>