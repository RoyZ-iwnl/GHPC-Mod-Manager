<UserControl x:Class="GHPC_Mod_Manager.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GHPC_Mod_Manager.Views"
             xmlns:converters="clr-namespace:GHPC_Mod_Manager.Converters"
             xmlns:resources="clr-namespace:GHPC_Mod_Manager.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:TranslationPluginVisibilityConverter x:Key="TranslationPluginVisibilityConverter"/>
        <converters:ModEnableStateConverter x:Key="ModEnableStateConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:StringToInverseVisibilityConverter x:Key="StringToInverseVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Background="{DynamicResource SurfaceVariantBrush}" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="GHPC Mod Manager" 
                          FontSize="{DynamicResource TitleLarge}" 
                          FontWeight="Bold" 
                          VerticalAlignment="Center"
                          Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
            </StackPanel>
            
            <!-- Game Status Panel -->
            <GroupBox Grid.Column="1" Header="{x:Static resources:Strings.GameStatus}" 
                      Margin="10,5" Padding="10,5" 
                      Background="{DynamicResource SurfaceBrush}"
                      Foreground="{DynamicResource OnSurfaceBrush}"
                      BorderBrush="{DynamicResource OutlineVariantBrush}">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                        <TextBlock Text="{x:Static resources:Strings.Status}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Border Background="{DynamicResource SuccessBrush}" 
                                CornerRadius="{DynamicResource RadiusExtraSmall}" 
                                Padding="8,4"
                                Visibility="{Binding IsGameRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="{x:Static resources:Strings.Running}" 
                                      Foreground="{DynamicResource OnSuccessBrush}" 
                                      FontWeight="Medium"
                                      FontSize="{DynamicResource LabelMedium}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <Border Background="{DynamicResource SurfaceVariantBrush}" 
                                CornerRadius="{DynamicResource RadiusExtraSmall}" 
                                Padding="8,4"
                                Visibility="{Binding IsGameRunning, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <TextBlock Text="{x:Static resources:Strings.NotRunning}" 
                                      Foreground="{DynamicResource OnSurfaceVariantBrush}" 
                                      FontWeight="Medium"
                                      FontSize="{DynamicResource LabelMedium}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <Button Content="{x:Static resources:Strings.StartGame}" Command="{Binding LaunchGameCommand}" 
                                Margin="4" MinWidth="80"
                                Style="{DynamicResource FilledButtonStyle}"
                                IsEnabled="{Binding IsGameRunning, Converter={StaticResource InverseBooleanConverter}}"/>
                        <Button Content="{x:Static resources:Strings.StopGame}" Command="{Binding StopGameCommand}" 
                                Margin="4" MinWidth="80"
                                Style="{DynamicResource OutlinedButtonStyle}"
                                IsEnabled="{Binding IsGameRunning}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            
            <Button Grid.Column="2" Content="{x:Static resources:Strings.Settings}" Command="{Binding OpenSettingsCommand}" 
                    Margin="10" MinWidth="80"
                    Style="{DynamicResource TextButtonStyle}"/>
        </Grid>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}" 
                    Background="{DynamicResource SurfaceBrush}"
                    IsEnabled="{Binding IsGameRunning, Converter={StaticResource InverseBooleanConverter}}">
            
            <!-- Mod Management Tab -->
            <TabItem Header="{x:Static resources:Strings.ModManagement}">
                <Grid Margin="10">
                    <!-- Mod List -->
                    <GroupBox Header="{x:Static resources:Strings.AvailableMods}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                <Button Content="{x:Static resources:Strings.Refresh}" Command="{Binding RefreshDataCommand}" 
                                        Margin="0,0,5,0" MinWidth="80"
                                        Style="{DynamicResource FilledButtonStyle}"/>
                                <Button Content="{x:Static resources:Strings.OpenGameRootDirectory}" Command="{Binding OpenGameRootDirectoryCommand}" 
                                        MinWidth="120"
                                        Style="{DynamicResource OutlinedButtonStyle}"/>
                            </StackPanel>
                            
                            <DataGrid Grid.Row="1" ItemsSource="{Binding Mods}" 
                                      SelectedItem="{Binding SelectedMod}" 
                                      AutoGenerateColumns="False" CanUserAddRows="False" 
                                      CanUserDeleteRows="False" IsReadOnly="True"
                                      SelectionUnit="FullRow" 
                                      CanUserSortColumns="False"
                                      CanUserResizeColumns="False">
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDataGridCellStyle}">
                                        <Setter Property="Focusable" Value="False"/>
                                        <Setter Property="IsTabStop" Value="False"/>
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="{x:Static resources:Strings.Name}" Width="*" MinWidth="100">
                                        <DataGridTemplateColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDataGridColumnHeaderStyle}">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTemplateColumn.HeaderStyle>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <!-- 可点击的超链接 -->
                                                    <Button Style="{DynamicResource TextButtonStyle}" 
                                                            Command="{Binding DataContext.OpenModGitHubPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Padding="0" MinWidth="0" BorderThickness="0" Background="Transparent"
                                                            Visibility="{Binding GitHubRepositoryUrl, Converter={StaticResource StringToVisibilityConverter}}">
                                                        <TextBlock Text="{Binding DisplayName}" 
                                                                   Foreground="{DynamicResource PrimaryBrush}" 
                                                                   TextDecorations="Underline"
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center" 
                                                                   TextWrapping="Wrap"/>
                                                    </Button>
                                                    <!-- 普通文本 -->
                                                    <TextBlock Text="{Binding DisplayName}" 
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center" 
                                                               TextWrapping="Wrap"
                                                               Foreground="{DynamicResource OnSurfaceBrush}"
                                                               Visibility="{Binding GitHubRepositoryUrl, Converter={StaticResource StringToInverseVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="{x:Static resources:Strings.InstalledVersion}" Binding="{Binding InstalledVersion}" Width="145" MinWidth="145">
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDataGridColumnHeaderStyle}">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                        <DataGridTextColumn.CellStyle>
                                            <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDataGridCellStyle}">
                                                <Setter Property="Visibility" Value="{Binding IsTranslationPlugin, Converter={StaticResource TranslationPluginVisibilityConverter}}"/>
                                            </Style>
                                        </DataGridTextColumn.CellStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="{x:Static resources:Strings.LatestVersion}" Binding="{Binding LatestVersion}" Width="120" MinWidth="130">
                                        <DataGridTextColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDataGridColumnHeaderStyle}">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.HeaderStyle>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                        <DataGridTextColumn.CellStyle>
                                            <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDataGridCellStyle}">
                                                <Setter Property="Visibility" Value="{Binding IsTranslationPlugin, Converter={StaticResource TranslationPluginVisibilityConverter}}"/>
                                            </Style>
                                        </DataGridTextColumn.CellStyle>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Header="{x:Static resources:Strings.Enabled}" Width="90" MinWidth="90">
                                        <DataGridTemplateColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDataGridColumnHeaderStyle}">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTemplateColumn.HeaderStyle>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                         IsChecked="{Binding IsEnabled, Mode=OneWay}"
                                                         IsEnabled="{Binding IsInstalled, Converter={StaticResource ModEnableStateConverter}}"
                                                         Command="{Binding DataContext.ToggleModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                         CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="{x:Static resources:Strings.Actions}" Width="360" MinWidth="300">
                                        <DataGridTemplateColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDataGridColumnHeaderStyle}">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTemplateColumn.HeaderStyle>
                                        <DataGridTemplateColumn.CellStyle>
                                            <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDataGridCellStyle}">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTemplateColumn.CellStyle>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <!-- For Translation Plugin, only show Toggle button -->
                                                    <Button Content="{x:Static resources:Strings.Toggle}" Command="{Binding DataContext.ToggleModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                            CommandParameter="{Binding}" MinWidth="60" Margin="2"
                                                            Style="{DynamicResource OutlinedButtonStyle}"
                                                            Visibility="{Binding IsTranslationPlugin, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    
                                                    <!-- For Regular Mods, show Install/Uninstall/Update/Toggle/Config buttons -->
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Visibility="{Binding IsTranslationPlugin, Converter={StaticResource TranslationPluginVisibilityConverter}}">
                                                        <Button Content="{x:Static resources:Strings.Install}" Command="{Binding DataContext.InstallModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding}" MinWidth="60" Margin="2"
                                                                Style="{DynamicResource FilledButtonStyle}"
                                                                Visibility="{Binding IsInstalled, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                                        <Button Content="{x:Static resources:Strings.Update}" Command="{Binding DataContext.UpdateModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding}" MinWidth="60" Margin="2"
                                                                Style="{DynamicResource FilledButtonStyle}"
                                                                Visibility="{Binding CanUpdate, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                        <Button Content="{x:Static resources:Strings.Uninstall}" Command="{Binding DataContext.UninstallModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding}" MinWidth="60" Margin="2"
                                                                Style="{DynamicResource OutlinedButtonStyle}"
                                                                Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                        <Button Content="{x:Static resources:Strings.Toggle}" Command="{Binding DataContext.ToggleModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding}" MinWidth="60" Margin="2"
                                                                Style="{DynamicResource OutlinedButtonStyle}"
                                                                Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                        <Button Content="{x:Static resources:Strings.Configure}" Command="{Binding DataContext.ConfigureModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding}" MinWidth="60" Margin="2"
                                                                Style="{DynamicResource TextButtonStyle}"
                                                                Visibility="{Binding HasConfiguration, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Translation Management Tab -->
            <TabItem Header="{x:Static resources:Strings.TranslationManagement}">
                <Grid Margin="20">
                    <StackPanel VerticalAlignment="Top">
                        <GroupBox Header="{x:Static resources:Strings.TranslationSystem}" Margin="0,0,0,20">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="{x:Static resources:Strings.InstallationStatus}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Static resources:Strings.Installed}" Foreground="Green" VerticalAlignment="Center"
                                               Visibility="{Binding IsTranslationInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBlock Text="{x:Static resources:Strings.NotInstalled}" Foreground="Red" VerticalAlignment="Center"
                                               Visibility="{Binding IsTranslationInstalled, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="{x:Static resources:Strings.InstallTranslationSystem}" Command="{Binding InstallTranslationCommand}" 
                                            MinWidth="140" Margin="0,0,10,0"
                                            Style="{DynamicResource FilledButtonStyle}"
                                            Visibility="{Binding IsTranslationInstalled, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                    <Button Content="{x:Static resources:Strings.UpdateTranslationFiles}" Command="{Binding UpdateTranslationCommand}" 
                                            MinWidth="140" Margin="0,0,10,0"
                                            Style="{DynamicResource OutlinedButtonStyle}"
                                            Visibility="{Binding IsTranslationInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <Button Content="{x:Static resources:Strings.UninstallTranslationSystem}" Command="{Binding UninstallTranslationCommand}" 
                                            MinWidth="140"
                                            Style="{DynamicResource OutlinedButtonStyle}"
                                            Visibility="{Binding IsTranslationInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="{x:Static resources:Strings.LanguageSelection}" 
                                  Visibility="{Binding IsTranslationInstalled, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="{x:Static resources:Strings.CurrentLanguage}" VerticalAlignment="Center" MinWidth="100" Margin="0,0,10,0"/>
                                    <ComboBox ItemsSource="{Binding AvailableLanguages}" 
                                              SelectedItem="{Binding CurrentTranslationLanguage}"
                                              MinWidth="120" MaxWidth="200" Margin="0,0,10,0"/>
                                    <Button Content="{x:Static resources:Strings.Apply}" Command="{Binding SetTranslationLanguageCommand}" 
                                            CommandParameter="{Binding CurrentTranslationLanguage}"
                                            MinWidth="80"
                                            Style="{DynamicResource FilledButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Game Running Overlay -->
        <Grid Grid.Row="1" Background="{DynamicResource ScrimBrush}" 
              Opacity="0.5"
              Visibility="{Binding IsGameRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
            
            <Border Background="{DynamicResource SurfaceBrush}" 
                    CornerRadius="{DynamicResource RadiusMedium}" 
                    Padding="32" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    BorderBrush="{DynamicResource OutlineVariantBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{x:Static resources:Strings.GameRunning}" 
                              FontSize="{DynamicResource HeadlineSmall}" 
                              FontWeight="Medium" 
                              Foreground="{DynamicResource OnSurfaceBrush}"
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,16"/>
                    <TextBlock Text="{x:Static resources:Strings.GameRunningCannotOperate}" 
                              TextAlignment="Center" 
                              Foreground="{DynamicResource OnSurfaceVariantBrush}"
                              FontSize="{DynamicResource BodyMedium}"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="32" Style="{DynamicResource MaterialStatusBarStyle}">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding StatusMessage}" 
                              FontFamily="{DynamicResource DefaultFontFamily}"
                              FontSize="{DynamicResource LabelMedium}"/>
                    <ProgressBar Width="100" Height="4" Margin="10,0,0,0" 
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>