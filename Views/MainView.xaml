<UserControl x:Class="GHPC_Mod_Manager.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GHPC_Mod_Manager.Views"
             xmlns:converters="clr-namespace:GHPC_Mod_Manager.Converters"
             xmlns:resources="clr-namespace:GHPC_Mod_Manager.Resources"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InvBoolToVis"/>
        <converters:InverseBooleanConverter x:Key="InvBool"/>
        <converters:BooleanAndToVisibilityConverter x:Key="BoolAndToVis"/>
        <converters:StringToVisibilityConverter x:Key="StrToVis"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== å·¦ä¾§å¯¼èˆªæ  ===== -->
        <Border Grid.Column="0" Background="{DynamicResource SurfaceVariantBrush}">
            <DockPanel>
                <!-- åº”ç”¨æ ‡é¢˜ -->
                <StackPanel DockPanel.Dock="Top" Margin="12,16,12,8">
                    <TextBlock Text="GHPC"
                               FontSize="{DynamicResource TitleMedium}"
                               FontWeight="Bold"
                               Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
                    <TextBlock Text="Mod Manager"
                               FontSize="{DynamicResource LabelMedium}"
                               Foreground="{DynamicResource OnSurfaceVariantBrush}"
                               Opacity="0.7"/>
                </StackPanel>

                <!-- åº•éƒ¨ï¼šè®¾ç½®æŒ‰é’® -->
                <Button DockPanel.Dock="Bottom"
                        Content="{x:Static resources:Strings.Settings}"
                        Command="{Binding OpenSettingsCommand}"
                        Style="{DynamicResource TextButtonStyle}"
                        Margin="8,8,8,12"
                        HorizontalAlignment="Stretch"/>

                <!-- å¯¼èˆªé¡¹åˆ—è¡¨ -->
                <ListBox ItemsSource="{Binding NavigationItems}"
                         SelectedItem="{Binding SelectedNavigationItem}"
                         Style="{DynamicResource NavigationListBoxStyle}"
                         Margin="0,8,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Label}"
                                       FontSize="{DynamicResource BodyMedium}"
                                       Padding="0,2"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- ===== å³ä¾§å†…å®¹åŒº ===== -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="32"/>
            </Grid.RowDefinitions>

            <!-- æ¸¸æˆçŠ¶æ€æ  -->
            <Grid Grid.Row="0" Background="{DynamicResource SurfaceVariantBrush}" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="{x:Static resources:Strings.GameStatus}"
                          Margin="10,5" Padding="10,5"
                          Background="{DynamicResource SurfaceBrush}"
                          Foreground="{DynamicResource OnSurfaceBrush}"
                          BorderBrush="{DynamicResource OutlineVariantBrush}">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                            <TextBlock Text="{x:Static resources:Strings.Status}"
                                       VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Border Background="{DynamicResource SuccessBrush}"
                                    CornerRadius="{DynamicResource RadiusExtraSmall}"
                                    Padding="8,4"
                                    Visibility="{Binding IsGameRunning, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="{x:Static resources:Strings.Running}"
                                           Foreground="{DynamicResource OnSuccessBrush}"
                                           FontWeight="Medium"
                                           FontSize="{DynamicResource LabelMedium}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="{DynamicResource SurfaceVariantBrush}"
                                    CornerRadius="{DynamicResource RadiusExtraSmall}"
                                    Padding="8,4"
                                    Visibility="{Binding IsGameRunning, Converter={StaticResource InvBoolToVis}}">
                                <TextBlock Text="{x:Static resources:Strings.NotRunning}"
                                           Foreground="{DynamicResource OnSurfaceVariantBrush}"
                                           FontWeight="Medium"
                                           FontSize="{DynamicResource LabelMedium}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="{x:Static resources:Strings.StartGame}"
                                    Command="{Binding LaunchGameCommand}"
                                    Margin="4" MinWidth="80"
                                    Style="{DynamicResource FilledButtonStyle}"
                                    IsEnabled="{Binding IsGameRunning, Converter={StaticResource InvBool}}"/>
                            <Button Content="{x:Static resources:Strings.StopGame}"
                                    Command="{Binding StopGameCommand}"
                                    Margin="4" MinWidth="80"
                                    Style="{DynamicResource OutlinedButtonStyle}"
                                    IsEnabled="{Binding IsGameRunning}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </Grid>

            <!-- æ›´æ–°æ¨ªå¹…åŒºï¼ˆAppæ›´æ–° + ç¿»è¯‘æ›´æ–°ï¼Œå åŠ æ˜¾ç¤ºï¼‰ -->
            <Grid Grid.Row="1">
                <!-- Appæ›´æ–°æ¨ªå¹… -->
                <Border Background="{DynamicResource PrimaryBrush}"
                        Padding="12,8" Margin="10,4,10,0"
                        CornerRadius="{DynamicResource RadiusSmall}"
                        Visibility="{Binding IsAppUpdateAvailable, Converter={StaticResource BoolToVis}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="âš " FontSize="20"
                                   Margin="0,0,10,0" VerticalAlignment="Center"
                                   Foreground="{DynamicResource OnPrimaryBrush}"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock FontWeight="SemiBold" Foreground="{DynamicResource OnPrimaryBrush}">
                                <Run Text="{x:Static resources:Strings.NewVersionAvailable}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding LatestAppVersion, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock Text="{x:Static resources:Strings.ClickToDownloadAndInstall}"
                                       FontSize="{DynamicResource LabelSmall}"
                                       Foreground="{DynamicResource OnPrimaryBrush}" Opacity="0.9"/>
                        </StackPanel>
                        <Button Grid.Column="2"
                                Content="{x:Static resources:Strings.CheckForUpdates}"
                                Command="{Binding DownloadAndInstallAppUpdateCommand}"
                                Margin="10,0,0,0"
                                Style="{DynamicResource FilledButtonStyle}"
                                Background="{DynamicResource OnPrimaryBrush}"
                                Foreground="{DynamicResource PrimaryBrush}"/>
                    </Grid>
                </Border>

                <!-- ç¿»è¯‘æ›´æ–°æ¨ªå¹… -->
                <Border Background="{DynamicResource SecondaryBrush}"
                        Padding="12,8" Margin="10,4,10,0"
                        CornerRadius="{DynamicResource RadiusSmall}"
                        Visibility="{Binding IsTranslationUpdateAvailable, Converter={StaticResource BoolToVis}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ðŸŒ" FontSize="20"
                                   Margin="0,0,10,0" VerticalAlignment="Center"
                                   Foreground="{DynamicResource OnSecondaryBrush}"/>
                        <TextBlock Grid.Column="1" FontWeight="SemiBold"
                                   Foreground="{DynamicResource OnSecondaryBrush}"
                                   VerticalAlignment="Center">
                            <Run Text="{x:Static resources:Strings.TranslationUpdateAvailable}"/>
                        </TextBlock>
                        <Button Grid.Column="2"
                                Content="{x:Static resources:Strings.GoToTranslation}"
                                Command="{Binding GoToTranslationManagementCommand}"
                                Margin="10,0,0,0"
                                Style="{DynamicResource FilledButtonStyle}"
                                Background="{DynamicResource OnSecondaryBrush}"
                                Foreground="{DynamicResource SecondaryBrush}"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- å½“å‰å­é¡µé¢å†…å®¹ -->
            <ContentControl Grid.Row="2" Content="{Binding CurrentPageView}"/>

            <!-- çŠ¶æ€æ  -->
            <StatusBar Grid.Row="3" Height="32" Style="{DynamicResource MaterialStatusBarStyle}">
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding StatusMessage}"
                                   FontFamily="{DynamicResource DefaultFontFamily}"
                                   FontSize="{DynamicResource LabelMedium}"/>
                        <ProgressBar Width="100" Height="4" Margin="10,0,0,0"
                                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </StatusBarItem>
            </StatusBar>
        </Grid>

        <!-- æ¸¸æˆè¿è¡Œé®ç½©ï¼ˆè¦†ç›–æ•´ä¸ªMainViewï¼Œå«å·¦ä¾§å¯¼èˆªæ ï¼‰ -->
        <Grid Grid.Column="0" Grid.ColumnSpan="2"
              Background="{DynamicResource ScrimBrush}" Opacity="0.8"
              Visibility="{Binding IsGameRunning, Converter={StaticResource BoolToVis}}">
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="{DynamicResource RadiusMedium}"
                    Padding="32"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderBrush="{DynamicResource OutlineVariantBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{x:Static resources:Strings.GameRunning}"
                               FontSize="{DynamicResource HeadlineSmall}"
                               FontWeight="Medium"
                               Foreground="{DynamicResource OnSurfaceBrush}"
                               HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock Text="{x:Static resources:Strings.GameRunningCannotOperate}"
                               TextAlignment="Center"
                               Foreground="{DynamicResource OnSurfaceVariantBrush}"
                               FontSize="{DynamicResource BodyMedium}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- MelonLoaderç¦ç”¨é®ç½© -->
        <Grid Grid.Column="0" Grid.ColumnSpan="2"
              Background="{DynamicResource ScrimBrush}" Opacity="0.8"
              Visibility="{Binding IsMelonLoaderDisabled, Converter={StaticResource BoolToVis}}">
            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="{DynamicResource RadiusMedium}"
                    Padding="32"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderBrush="{DynamicResource OutlineVariantBrush}"
                    BorderThickness="1">
                <TextBlock Text="{x:Static resources:Strings.MelonLoaderDisabledOverlayHint}"
                           FontSize="{DynamicResource HeadlineSmall}"
                           FontWeight="Medium"
                           Foreground="{DynamicResource OnSurfaceBrush}"
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>

    </Grid>
</UserControl>
