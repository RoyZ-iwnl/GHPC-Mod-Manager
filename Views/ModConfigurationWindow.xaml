<Window x:Class="GHPC_Mod_Manager.Views.ModConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GHPC_Mod_Manager.Views"
        xmlns:converters="clr-namespace:GHPC_Mod_Manager.Converters"
        xmlns:resources="clr-namespace:GHPC_Mod_Manager.Resources"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="720" 
        Width="1280"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <ResourceDictionary>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <converters:ConfigurationItemTypeConverter x:Key="ConfigurationItemTypeConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceVariantBrush}" Padding="15,10">
            <StackPanel>
                <TextBlock Text="{Binding ModDisplayName}" 
                          FontSize="{DynamicResource TitleLarge}" 
                          FontWeight="Bold"
                          Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
                <TextBlock Text="{Binding ModId}" 
                          FontSize="{DynamicResource BodySmall}" 
                          Foreground="{DynamicResource OutlineVariantBrush}"/>
            </StackPanel>
        </Border>
        
        <!-- Preset Management -->
        <GroupBox Grid.Row="1" 
                  Header="{x:Static resources:Strings.ConfigurationPresets}" 
                  Margin="10,10,10,5"
                  Foreground="{DynamicResource OnBackgroundBrush}"
                  BorderBrush="{DynamicResource OutlineBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Preset Controls -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <ComboBox ItemsSource="{Binding Presets}" 
                              SelectedItem="{Binding SelectedPreset}"
                              DisplayMemberPath="Name"
                              Width="200" 
                              Margin="0,0,10,0"
                              VerticalContentAlignment="Center"
                              Foreground="{DynamicResource OnSurfaceBrush}"
                              Background="{DynamicResource SurfaceVariantBrush}"
                              BorderBrush="{DynamicResource OutlineBrush}"/>
                    <Button Content="{x:Static resources:Strings.LoadPreset}" 
                           Command="{Binding LoadPresetCommand}" 
                           Width="80" 
                           Margin="0,0,5,0"
                           Style="{DynamicResource OutlinedButtonStyle}"/>
                    <Button Content="{x:Static resources:Strings.SavePreset}" 
                           Command="{Binding SavePresetCommand}" 
                           Width="80" 
                           Margin="0,0,5,0"
                           Style="{DynamicResource OutlinedButtonStyle}"/>
                    <Button Content="{x:Static resources:Strings.DeletePreset}" 
                           Command="{Binding DeletePresetCommand}" 
                           Width="80" 
                           Margin="0,0,10,0"
                           Style="{DynamicResource TextButtonStyle}"/>
                    <TextBox Text="{Binding NewPresetName}" 
                             Width="150" 
                             Margin="0,0,5,0"
                             VerticalAlignment="Center"
                             Foreground="{DynamicResource OnSurfaceBrush}"
                             Background="{DynamicResource SurfaceVariantBrush}"
                             BorderBrush="{DynamicResource OutlineBrush}"/>
                    <Button Content="{x:Static resources:Strings.SaveAsPreset}" 
                           Command="{Binding SaveAsPresetCommand}" 
                           Width="100"
                           Style="{DynamicResource FilledButtonStyle}"/>
                </StackPanel>
                
                <!-- Search Box -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="{x:Static resources:Strings.Search}" 
                              VerticalAlignment="Center" 
                              Margin="0,0,5,0"
                              Foreground="{DynamicResource OnBackgroundBrush}"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Width="300" 
                             VerticalAlignment="Center"
                             Margin="0,0,10,0"
                             Foreground="{DynamicResource OnSurfaceBrush}"
                             Background="{DynamicResource SurfaceBrush}"
                             BorderBrush="{DynamicResource OutlineBrush}"/>
                    <TextBlock Text="{Binding FilteredConfigurationCount}" 
                               VerticalAlignment="Center" 
                               Foreground="{DynamicResource OutlineVariantBrush}" 
                               Margin="10,0,0,0"/>
                </StackPanel>
                
                <!-- Configuration Options -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="5">
                    <StackPanel>
                        <TextBlock Text="{x:Static resources:Strings.NoConfigurationOptions}" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   Foreground="{DynamicResource OutlineVariantBrush}" 
                                   Margin="20"
                                   Visibility="{Binding HasConfiguration, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        
                        <ItemsControl ItemsSource="{Binding FilteredConfiguration}"
                                      Visibility="{Binding HasConfiguration, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <!-- 单独注释行显示 -->
                                        <Border BorderThickness="0" 
                                                Margin="0,5,0,0" 
                                                Padding="15,8"
                                                Background="{DynamicResource SurfaceVariantBrush}"
                                                CornerRadius="{DynamicResource RadiusSmall}"
                                                Visibility="{Binding IsStandaloneComment, Converter={StaticResource ConfigurationItemTypeConverter}, ConverterParameter=Standalone}">
                                            <TextBlock Text="{Binding Comment}" 
                                                       FontWeight="Medium"
                                                       FontStyle="Italic"
                                                       FontSize="{DynamicResource BodyMedium}"
                                                       Foreground="{DynamicResource OnSurfaceVariantBrush}"
                                                       TextWrapping="Wrap"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                        
                                        <!-- 配置项显示 -->
                                        <Border BorderBrush="{DynamicResource OutlineBrush}" 
                                                BorderThickness="1" 
                                                Margin="0,5" 
                                                Padding="10"
                                                Background="{DynamicResource SurfaceBrush}"
                                                CornerRadius="{DynamicResource RadiusSmall}"
                                                Visibility="{Binding IsStandaloneComment, Converter={StaticResource ConfigurationItemTypeConverter}, ConverterParameter=Configuration}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="350"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Key}" 
                                                              FontWeight="SemiBold"
                                                              Foreground="{DynamicResource OnSurfaceBrush}"/>
                                                    <TextBlock Text="{Binding Description}" 
                                                               FontSize="{DynamicResource BodySmall}" 
                                                               Foreground="{DynamicResource OutlineVariantBrush}" 
                                                               TextWrapping="Wrap"
                                                               Visibility="{Binding HasDescription, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    <TextBox Text="{Binding Comment}" 
                                                             FontSize="{DynamicResource BodySmall}" 
                                                             Foreground="{DynamicResource TertiaryBrush}" 
                                                             TextWrapping="Wrap"
                                                             FontStyle="Italic"
                                                             Margin="0,2,0,0"
                                                             IsReadOnly="True"
                                                             BorderThickness="0"
                                                             Background="Transparent"
                                                             Visibility="{Binding HasComment, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                             ToolTip="{x:Static resources:Strings.ClickToSelectAndCopyComment}"
                                                             Cursor="IBeam"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                    <!-- Boolean Value -->
                                                    <CheckBox IsChecked="{Binding BoolValue, Mode=TwoWay}" 
                                                              Visibility="{Binding IsBooleanType, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                              VerticalAlignment="Center"
                                                              Foreground="{DynamicResource OnSurfaceBrush}"/>
                                                    
                                                    <!-- String/Number Value -->
                                                    <TextBox Text="{Binding StringValue, Mode=TwoWay}" 
                                                             Visibility="{Binding IsStringType, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                             VerticalAlignment="Center"
                                                             Foreground="{DynamicResource OnSurfaceBrush}"
                                                             Background="{DynamicResource SurfaceVariantBrush}"
                                                             BorderBrush="{DynamicResource OutlineBrush}"/>
                                                    
                                                    <!-- Enum/Choice Value -->
                                                    <ComboBox ItemsSource="{Binding ChoiceOptions}"
                                                              SelectedItem="{Binding StringValue, Mode=TwoWay}"
                                                              Visibility="{Binding IsChoiceType, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                              VerticalAlignment="Center"
                                                              Foreground="{DynamicResource OnSurfaceBrush}"
                                                              Background="{DynamicResource SurfaceVariantBrush}"
                                                              BorderBrush="{DynamicResource OutlineBrush}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </GroupBox>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" 
                   Height="25"
                   Background="{DynamicResource SurfaceVariantBrush}"
                   Foreground="{DynamicResource OnSurfaceVariantBrush}">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" 
                          Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
            </StatusBarItem>
        </StatusBar>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="{x:Static resources:Strings.Apply}" 
                   Command="{Binding ApplyCommand}" 
                   Width="80" 
                   Margin="0,0,10,0"
                   Style="{DynamicResource FilledButtonStyle}"/>
            <Button Content="{x:Static resources:Strings.OK}" 
                   Command="{Binding OkCommand}" 
                   Width="80" 
                   Margin="0,0,10,0"
                   Style="{DynamicResource OutlinedButtonStyle}"/>
            <Button Content="{x:Static resources:Strings.Cancel}" 
                   Command="{Binding CancelCommand}" 
                   Width="80"
                   Style="{DynamicResource TextButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>