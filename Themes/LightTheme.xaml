<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    
    <!-- Material Design 3 浅色主题颜色系统 -->
    
    <!-- 主要颜色 -->
    <Color x:Key="Primary">#6750A4</Color>
    <Color x:Key="OnPrimary">#FFFFFF</Color>
    <Color x:Key="PrimaryContainer">#EADDFF</Color>
    <Color x:Key="OnPrimaryContainer">#21005D</Color>
    
    <!-- 次要颜色 -->
    <Color x:Key="Secondary">#625B71</Color>
    <Color x:Key="OnSecondary">#FFFFFF</Color>
    <Color x:Key="SecondaryContainer">#E8DEF8</Color>
    <Color x:Key="OnSecondaryContainer">#1D192B</Color>
    
    <!-- 第三颜色 -->
    <Color x:Key="Tertiary">#7D5260</Color>
    <Color x:Key="OnTertiary">#FFFFFF</Color>
    <Color x:Key="TertiaryContainer">#FFD8E4</Color>
    <Color x:Key="OnTertiaryContainer">#31111D</Color>
    
    <!-- 表面颜色 -->
    <Color x:Key="Surface">#FFFBFE</Color>
    <Color x:Key="OnSurface">#1C1B1F</Color>
    <Color x:Key="SurfaceVariant">#E7E0EC</Color>
    <Color x:Key="OnSurfaceVariant">#49454F</Color>
    <Color x:Key="SurfaceTint">#6750A4</Color>
    <Color x:Key="SurfaceContainer">#F3EDF7</Color>
    
    <!-- 背景颜色 -->
    <Color x:Key="Background">#FFFBFE</Color>
    <Color x:Key="OnBackground">#1C1B1F</Color>
    
    <!-- 错误颜色 -->
    <Color x:Key="Error">#BA1A1A</Color>
    <Color x:Key="OnError">#FFFFFF</Color>
    <Color x:Key="ErrorContainer">#FFDAD6</Color>
    <Color x:Key="OnErrorContainer">#410002</Color>
    
    <!-- 轮廓颜色 -->
    <Color x:Key="Outline">#79747E</Color>
    <Color x:Key="OutlineVariant">#CAC4D0</Color>
    
    <!-- 阴影和叠加 -->
    <Color x:Key="Shadow">#000000</Color>
    <Color x:Key="Scrim">#000000</Color>
    <Color x:Key="InverseSurface">#313033</Color>
    <Color x:Key="InverseOnSurface">#F4EFF4</Color>
    <Color x:Key="InversePrimary">#D0BCFF</Color>
    
    <!-- 成功颜色 -->
    <Color x:Key="Success">#2E7D32</Color>
    <Color x:Key="OnSuccess">#FFFFFF</Color>
    <Color x:Key="SuccessContainer">#C8E6C9</Color>
    
    <!-- 警告颜色 -->
    <Color x:Key="Warning">#F57C00</Color>
    <Color x:Key="OnWarning">#FFFFFF</Color>
    <Color x:Key="WarningContainer">#FFE0B2</Color>
    
    <!-- 转换为画刷资源 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="{StaticResource OnPrimary}"/>
    <SolidColorBrush x:Key="PrimaryContainerBrush" Color="{StaticResource PrimaryContainer}"/>
    <SolidColorBrush x:Key="OnPrimaryContainerBrush" Color="{StaticResource OnPrimaryContainer}"/>
    
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="OnSecondaryBrush" Color="{StaticResource OnSecondary}"/>
    <SolidColorBrush x:Key="SecondaryContainerBrush" Color="{StaticResource SecondaryContainer}"/>
    <SolidColorBrush x:Key="OnSecondaryContainerBrush" Color="{StaticResource OnSecondaryContainer}"/>
    
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="OnTertiaryBrush" Color="{StaticResource OnTertiary}"/>
    <SolidColorBrush x:Key="TertiaryContainerBrush" Color="{StaticResource TertiaryContainer}"/>
    <SolidColorBrush x:Key="OnTertiaryContainerBrush" Color="{StaticResource OnTertiaryContainer}"/>
    
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource OnSurface}"/>
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="{StaticResource SurfaceVariant}"/>
    <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="{StaticResource OnSurfaceVariant}"/>
    <SolidColorBrush x:Key="SurfaceTintBrush" Color="{StaticResource SurfaceTint}"/>
    <SolidColorBrush x:Key="SurfaceContainerBrush" Color="{StaticResource SurfaceContainer}"/>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="{StaticResource OnBackground}"/>
    
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}"/>
    <SolidColorBrush x:Key="OnErrorBrush" Color="{StaticResource OnError}"/>
    <SolidColorBrush x:Key="ErrorContainerBrush" Color="{StaticResource ErrorContainer}"/>
    <SolidColorBrush x:Key="OnErrorContainerBrush" Color="{StaticResource OnErrorContainer}"/>
    
    <SolidColorBrush x:Key="OutlineBrush" Color="{StaticResource Outline}"/>
    <SolidColorBrush x:Key="OutlineVariantBrush" Color="{StaticResource OutlineVariant}"/>
    
    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource Shadow}"/>
    <SolidColorBrush x:Key="ScrimBrush" Color="{StaticResource Scrim}"/>
    <SolidColorBrush x:Key="InverseSurfaceBrush" Color="{StaticResource InverseSurface}"/>
    <SolidColorBrush x:Key="InverseOnSurfaceBrush" Color="{StaticResource InverseOnSurface}"/>
    <SolidColorBrush x:Key="InversePrimaryBrush" Color="{StaticResource InversePrimary}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="OnSuccessBrush" Color="{StaticResource OnSuccess}"/>
    <SolidColorBrush x:Key="SuccessContainerBrush" Color="{StaticResource SuccessContainer}"/>
    
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="OnWarningBrush" Color="{StaticResource OnWarning}"/>
    <SolidColorBrush x:Key="WarningContainerBrush" Color="{StaticResource WarningContainer}"/>
    
    <!-- 表面高度 -->
    <system:Double x:Key="Elevation0">0</system:Double>
    <system:Double x:Key="Elevation1">1</system:Double>
    <system:Double x:Key="Elevation2">3</system:Double>
    <system:Double x:Key="Elevation3">6</system:Double>
    <system:Double x:Key="Elevation4">8</system:Double>
    <system:Double x:Key="Elevation5">12</system:Double>
    
    <!-- 圆角半径 -->
    <CornerRadius x:Key="RadiusNone">0</CornerRadius>
    <CornerRadius x:Key="RadiusExtraSmall">4</CornerRadius>
    <CornerRadius x:Key="RadiusSmall">8</CornerRadius>
    <CornerRadius x:Key="RadiusMedium">12</CornerRadius>
    <CornerRadius x:Key="RadiusLarge">16</CornerRadius>
    <CornerRadius x:Key="RadiusExtraLarge">28</CornerRadius>
    
    <!-- 字体大小 -->
    <system:Double x:Key="DisplayLarge">57</system:Double>
    <system:Double x:Key="DisplayMedium">45</system:Double>
    <system:Double x:Key="DisplaySmall">36</system:Double>
    <system:Double x:Key="HeadlineLarge">32</system:Double>
    <system:Double x:Key="HeadlineMedium">28</system:Double>
    <system:Double x:Key="HeadlineSmall">24</system:Double>
    <system:Double x:Key="TitleLarge">22</system:Double>
    <system:Double x:Key="TitleMedium">16</system:Double>
    <system:Double x:Key="TitleSmall">14</system:Double>
    <system:Double x:Key="LabelLarge">14</system:Double>
    <system:Double x:Key="LabelMedium">12</system:Double>
    <system:Double x:Key="LabelSmall">11</system:Double>
    <system:Double x:Key="BodyLarge">16</system:Double>
    <system:Double x:Key="BodyMedium">14</system:Double>
    <system:Double x:Key="BodySmall">12</system:Double>
    
    <!-- 字体家族 -->
    <FontFamily x:Key="DefaultFontFamily">Microsoft YaHei UI, Segoe UI, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="MonospaceFontFamily">Consolas, Courier New, monospace</FontFamily>
    
</ResourceDictionary>